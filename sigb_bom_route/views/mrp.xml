<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_mrp_bom_form" model="ir.ui.view">
            <field name="name">mrp.bom.form.custom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='routing_id']" position="attributes">
                    <attribute name="invisible" >1</attribute>
                </xpath>
                 <xpath expr="//div[hasclass('o_row')]" position="after">
                    <field name="route_id" widget="many2many_tags"/>
                    <field name="sub_route_id"  domain="[('id','in',route_id)]" />
                </xpath>
            </field>
        </record>

    <record id="view_mrp_bom_form_line" model="ir.ui.view">
            <field name="name">mrp.bom.line.form.custom</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='operation_id']" position="before">
                    <field name="routing_id" domain="[('id','in',parent.route_id)]"/>
                </xpath>
            </field>
        </record>

    <record id="mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.form.custom</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="route_id" />

                </xpath>
                <xpath expr="//field[@name='routing_id']" position="attributes">
                    <attribute name="invisible">1</attribute>

                </xpath>
            </field>
        </record>


</odoo>