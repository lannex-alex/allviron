<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_quality_check_form" model="ir.ui.view">
            <field name="name">quality.point.form.inherit</field>
            <field name="model">quality.point</field>
            <field name="inherit_id" ref="mrp_workorder.quality_point_view_form_inherit_mrp"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='operation_id']" position="replace">
                    <field string="Work Order Operation" name="operation_id" attrs="{'invisible': [('code', '!=', 'mrp_operation')]}" groups="mrp.group_mrp_routings" widget="many2many_tags" options="{'no_create': True}"/>

                </xpath>

            </field>
        </record>
</odoo>